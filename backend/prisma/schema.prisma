generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model JobPosting {
  id          String      @id @default(uuid())
  title       String
  department  String?
  description String?
  requirements String?
  status      String      @default("active") // active, closed, draft
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  applicants  Applicant[]
}

model Applicant {
  id              String      @id @default(uuid())
  name            String
  email           String
  phone           String?
  resumeFilePath  String
  resumeText      String?     // Extracted text from resume

  // AI-generated fields for prioritization
  priorityScore   Int         @default(0) // 0-100 score
  summary         String?     // AI-generated brief summary
  keySkills       String?     // JSON array of key skills
  experience      String?     // AI-extracted experience summary
  education       String?     // AI-extracted education
  highlights      String?     // JSON array of standout points
  concerns        String?     // JSON array of potential concerns

  // Status tracking
  status          String      @default("new") // new, reviewed, shortlisted, rejected, hired
  notes           String?

  // Relations
  jobPostingId    String?
  jobPosting      JobPosting? @relation(fields: [jobPostingId], references: [id])

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([priorityScore])
  @@index([status])
  @@index([jobPostingId])
}
